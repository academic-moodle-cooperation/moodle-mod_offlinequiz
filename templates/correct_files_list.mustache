<div>
  <div class="container-fluid offlinequiz-correct-filelist">
    {{#files}}
      <div class="offlinequiz-queue-file row">
        <div class="col-1">
          {{#filestatusdone}}
              <i class="fa fa-lg fa-solid fa-check-circle notifysuccess"></i>
          {{/filestatusdone}}
          {{#filestatuserror}}
            <i class="fa fa-lg fa-regular fa-exclamation-circle offlinequiz-nextitem"></i>
          {{/filestatuserror}}
          {{#filestatusprocessing}}
            <i class="fa fa-lg fa-regular fa-spinner offlinequiz-processing"></i>
          {{/filestatusprocessing}}
          {{#filestatusnotstarted}}
            <i class="far fa-lg fa-regular fa-circle offlinequiz-notstarted"></i>
          {{/filestatusnotstarted}}
        </div>
        <div class="col-5">
          {{filename}}
        </div>
        <div class="col-5">
          {{#filestatusnotstarted}}
            {{#str}} queuefilenotstarted, mod_offlinequiz {{/str}}
          {{/filestatusnotstarted}}
          {{#filestatusprocessing}}
            {{#str}} queuefileprocessing, mod_offlinequiz {{/str}}
          {{/filestatusprocessing}}
          {{#evaluated}}
            {{#studentname}}
            <span> {{#str}} queuefilestudent, mod_offlinequiz {{/str}} {{studentname}}, </span>
            {{/studentname}}
            {{#pagenumber}}
            <span> {{#str}} queuefilepagenumber, mod_offlinequiz {{/str}} {{pagenumber}}, </span>
            {{/pagenumber}}
            {{#groupnumber}}
            <span> {{#str}} queuefilegroupnumber, mod_offlinequiz {{/str}} {{groupnumber}} </span>
            {{/groupnumber}}
            {{#errormessage}}
              {{#str}} {{errormessage}}, mod_offlinequiz {{/str}}
            {{/errormessage}}
            {{#filestatuserror}}
              <a href="{{correctlink}}"> {{#str}} queuefilecorrect, mod_offlinequiz {{/str}}</a>
            {{/filestatuserror}}
          {{/evaluated}}
        </div>
        <div class="col-1">
          <a href="{{{fileurl}}}"><i class="fa-solid fa-download fa-fw"></i> </a>
          <a href="{{{editurl}}}"><i class="fas fa-edit"></i> </a>
        </div>
      </div>
    {{/files}}
  </div>
</div>