<div>
  <div class="container-fluid>
    {{#files}}
      <div class="offlinequiz-queue-file">
        
        <span>
          {{#filestatusdone}}
              <i class="fa fa-lg fa-solid fa-check-circle notifysuccess"></i>
          {{/filestatusdone}}
          {{#filestatuserror}}
            <i class="fa fa-lg fa-regular fa-exclamation-circle offlinequiz-nextitem"></i>
          {{/filestatuserror}}
          {{#filestatusprocessing}}
            <i class="fa fa-lg fa-regular fa-spinner offlinequiz-processing"></i>
          {{/filestatusprocessing}}
          {{#filestatusnotstarted}}
            <i class="far fa-lg fa-regular fa-circle offlinequiz-notstarted"></i>
          {{/filestatusnotstarted}}
          {{filename}}
        </span>

        {{#evaluated}}
          <span> {{#str}} queuefilestudent, mod_offlinequiz {{/str}} {{studentname}}</span>
          <span> {{#str}} queuefilepagenumber, mod_offlinequiz {{/str}} {{pagenumber}} </span>
          <span> {{#str}} queuefilegroupnumber, mod_offlinequiz {{/str}} {{groupnumber}} </span>
          {{#error}}
            <a href="{{correctlink}}"> {{#str}} queuefilecorrect, mod_offlinequiz {{/str}}</a>
          {{/error}}
        {{/evaluated}}
        <a href="{{fileurl}}">{{#str}} queuedownload, mod_offlinequiz {{/str}}</a>
      </div>
    {{/files}}
  </div>
</div>