{{!
    @template mod_offlinequiz/correct_files_list

    List files of an upload

    Example context (json):
    {
        "files": [
            {
                "filestatusdone": "true",
                "filename": "upload01.jpg",
                "editurl": "https://moodle.org/mod/offlinequiz/correct.php?scannedpageid=5",
                "fileurl": "https://moodle.org/pluginfile.php?id=123561234",
                "statusmessage": "Evaluation done."
            }
        ]
    }
}}
<div>
  <div class="container-fluid offlinequiz-correct-filelist">
      <div class="offlinequiz-queue-file-header row">
         <div class="col-1">
           {{#str}} queuefilestatusheader, mod_offlinequiz {{/str}}
         </div>
         <div class="col-4">
           {{#str}} queuefilesfileheader, mod_offlinequiz {{/str}}
         </div>
         <div class="col-5">
           {{#str}} queuefilesdetailsheader, mod_offlinequiz {{/str}}
         </div>
         <div class="col-2">
           {{#str}} queuefilesactionsheader, mod_offlinequiz {{/str}}
         </div>
      </div>
    {{#files}}
      <div class="offlinequiz-queue-file row">
        <div class="col-1">
          {{#filestatusdone}}
            <i class="fa fa-lg fa-solid fa-check-circle notifysuccess"></i>
          {{/filestatusdone}}
          {{#filestatuserror}}
            <i class="fa fa-lg fa-regular fa-exclamation-circle offlinequiz-nextitem"></i>
          {{/filestatuserror}}
          {{#filestatusprocessing}}
            <i class="fa fa-lg fa-regular fa-spinner offlinequiz-processing"></i>
          {{/filestatusprocessing}}
          {{#filestatusnotstarted}}
            <i class="far fa-lg fa-regular fa-circle offlinequiz-notstarted"></i>
          {{/filestatusnotstarted}}
        </div>
        <div class="col-4">
          {{filename}}
        </div>
        <div class="col-5">
          {{#filestatusnotstarted}}
            {{#str}} queuefilenotstarted, mod_offlinequiz {{/str}}
          {{/filestatusnotstarted}}
          {{#filestatusprocessing}}
            {{#str}} queuefileprocessing, mod_offlinequiz {{/str}}
          {{/filestatusprocessing}}
          {{#statusmessage}}
            <span> {{statusmessage}} </span>
          {{/statusmessage}}
        </div>
        <div class="col-2">
          {{{editurl}}}
          <a href="{{{fileurl}}}" title="{{#str}} queuefiledownloadhovertext, mod_offlinequiz {{/str}}"><i class="fa-solid fa-download fa-fw"></i> </a>
        </div>
      </div>
    {{/files}}
  </div>
</div>
