<div class="offlinequiz-view">
  <div class="offlinequiz-view-column">
    <h3>{{#str}} preparation, mod_offlinequiz {{/str}}</h3>
    <ul class="fa-ul">
      {{#preparationsteps}}
         {{> mod_offlinequiz/teacher_view_step }}
      {{/preparationsteps}}
    </ul>
  </div>
  <div class="offlinequiz-view-column">
    <h3>{{#str}} evaluation, mod_offlinequiz {{/str}}</h3>
    <ul class="oq-expandable {{evaluation-expanded}} fa-ul">
      {{#evaluationsteps}}
          {{> mod_offlinequiz/teacher_view_step }}
      {{/evaluationsteps}}
    </ul>
  </div>
    <div class="offlinequiz-view-column">
    <h3>{{#str}} statisticsviewheader, mod_offlinequiz {{/str}}</h3>
    {{{statistics}}}
  </div>
  {{#displayparticipantssteps}}
    <div class="offlinequiz-view offlinequiz-view-statistics-column">
      <h3>{{#str}} attendancesheadline, mod_offlinequiz {{/str}}</h3>
      <div class="offlinequiz-view-column">
        <h4>{{#str}} attendancespreparationheadline, mod_offlinequiz {{/str}}</h4>
        <ul class="oq-expandable {{participantslist-expanded}} fa-ul">
          {{#participantslistpreparationsteps}}
            {{> mod_offlinequiz/teacher_view_step }}
          {{/participantslistpreparationsteps}}
        </ul>
      </div>
      <div class="offlinequiz-view-column">
        <h4>{{#str}} attendancesevaluationheadline, mod_offlinequiz {{/str}}</h4>
        <ul class="oq-expandable {{participantslist-expanded}} fa-ul">
          {{#participantslistevaluationsteps}}
            {{> mod_offlinequiz/teacher_view_step }}
          {{/participantslistevaluationsteps}}
        </ul>
      </div>
  {{/displayparticipantssteps}}
  <div class="offlinequiz-view-header" >
    <h3>{{#str}} legend, mod_offlinequiz {{/str}}</h3>
    <ul class="fa-ul">
      <li><i class="fa fa-li fa-lg fa-solid fa-circle offlinequiz-noaction"></i> {{#str}} legendnoaction, mod_offlinequiz {{/str}}
      <li><i class="fa fa-li fa-lg fa-solid fa-check-circle notifysuccess"></i> {{#str}} legenddone, mod_offlinequiz {{/str}}
      <li><i class="fa fa-li fa-lg fa-solid fa-circle-o notifyproblem"></i> {{#str}} legendnextitem, mod_offlinequiz {{/str}}
      <li><i class="fa fa-li fa-lg fa-regular fa-exclamation-circle offlinequiz-nextitem"></i> {{#str}} legendwarning, mod_offlinequiz {{/str}}
    </ul>
  </div>
</div>
