<div class="sideblock col-9">
{{{notification}}}
  <h3>{{#str}} tutorial:header:1, mod_offlinequiz {{/str}}</h3>

  <p>{{#str}} tutorial:introduction:1, mod_offlinequiz {{/str}}</p>

  <div class="questionsheet">
    <div class="question">
      <span class="questionitem">{{#str}} tutorial:questionsheet:1, mod_offlinequiz {{/str}}</span>
      <div class="grade">{{#str}} tutorial:questionsheet:1:marks, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:1:1, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:1:2, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:1:3, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:1:4, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:1:5, mod_offlinequiz {{/str}}</div>
    </div>
    <div class="question">
      <span class="questionitem">{{#str}} tutorial:questionsheet:2, mod_offlinequiz {{/str}}</span>
      <img class="questionimage" src="./pix/tutorial/questionnaire.svg">
      <div class="grade">{{#str}} tutorial:questionsheet:2:marks, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:2:1, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:2:2, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:2:3, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:2:4, mod_offlinequiz {{/str}}</div>
      <div class="answer">{{#str}} tutorial:questionsheet:2:5, mod_offlinequiz {{/str}}</div>

    </div>
  </div>
<form action="tutorial.php" method="get" id="page1">
  <div class="tutorialquestion">
    <h4>{{#str}} tutorial:question:1, mod_offlinequiz {{/str}}</h4>

    <input type="hidden" name="id" value="{{id}}">
    <input type="hidden" name="page" value="1">
    <div class="option"><input type="radio" name="answer" value="1" id="answer1"><label for="answer1"> {{#str}} tutorial:option:1:1, mod_offlinequiz {{/str}}</label></div>
    <div class="option"><input type="radio" name="answer" value="2" id="answer2"><label for="answer2"> {{#str}} tutorial:option:1:2, mod_offlinequiz {{/str}}</label></div>
  </div>
  <input class="btn btn-primary tutorialbutton" type="submit" value="{{#str}} continue{{/str}}">
</form>
</div>